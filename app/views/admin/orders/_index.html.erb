<table class='table table-inverse border-bottom text-light'>
  <thead class='text-light'>
    <tr>
      <th style="width: 15%"></th>
      <th>購入日時</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
      <th style="width: 15%"></th>
    </tr>
  </thead>
  <tbody>
    <% orders.each do |order| %>
      <tr>
        <td></td>
        <td>
          <%= link_to admin_order_path(order), class: "text-decolation-none text-light" do %>
            <u><%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %></u>
          <% end %>
        </td>
        <td>
          <%= order.order_details.sum(:amount) %>
        </td>
        <td>
          <%= order.status_i18n %>
        </td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="mx-auto">
  <%= paginate orders, remote: true %>
</div>
