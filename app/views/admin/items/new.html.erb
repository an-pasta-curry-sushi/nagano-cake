<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>商品新規登録</h1>
  		<%= form_with model: @item, url: admin_items_path do |f| %>
  <div class="form-group">
    <%= f.label :image, "商品画像" %>
    <%= f.file_field :item_image, class: "form-control-file item_image", accept: 'image/*' %>
  </div>

  <div class="form-group">
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name, class: 'form-control item_name' %>
  </div>

  <div class="field">
    <%= f.label :introduction, "商品説明" %>
    <%= f.text_area :introduction, rows: '5', class: "w-100 comment-textarea form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :genre_id, "ジャンル" %>
    <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
  </div>

  <div class="form-group">
    <%= f.label :no_tax_price, "税抜価格" %>
    <%= f.text_field :no_tax_price, class: 'form-control item_no_tax_price' %>円
  </div>

  <div class="form-group">
    <%= f.label :no_tax_price, "販売ステータス　" %>
    <%= f.radio_button :salling_status, "false" %>
    <%= f.label :salling_status, "販売停止中" %>

    <%= f.radio_button :salling_status, "true" %>
    <%= f.label :salling_status, "販売中" %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
  </div>
</div>