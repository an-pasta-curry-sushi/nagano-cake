<h3>注文情報確認</h3>
<div class='container'>

  <div class='row'>

    <div class='col-md-7'>
      <table>

        <tr>
          <td>商品名</td>
          <td>単価(税込)</td>
          <td>数量</td>
          <td>小計</td>
        </tr>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%=image_tag cart_item.item.get_item_image, size: '50x50'%>
            <%=cart_item.item.name%>
          </td>
          <td><%=cart_item.item.get_taxin_price%></td>
          <td><%=cart_item.amount%></td>
          <td><%=cart_item.item.sum_of_price(cart_item)%></td>
        </tr>
        <%end%>

      </table>
    </div>


    <div class='col-md-4 offset-md-1'>
      <table>

        <tr>
          <td>送料</td>
          <td>800</td>
        </tr>

        <tr>
          <td>商品合計</td>
          <td><%=@total.to_s(:delimited) %></td>
        </tr>

        <tr>
          <td>請求金額</td>
          <td><%=@total_payment %></td>
        </tr>

      </table>
    </div>

    <div class='container'>
      <div class='row'>
        <div class='col-md-8 offset-md-4'></div>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-7 offset-md-5'>
      <table>
        <tr><td>支払い方法</td><td><%= @order.payment_method %></td></tr>
        <tr><td>お届け先</td><td><%= @order.postal_code + @order.address + @order.name %></td></tr>
      </table>
    </div>
    <%= form_with model: @order, url: orders_path, method: :post do |f| %>
    <%= f.hidden_field :postal_code %>
    <%= f.hidden_field :address %>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :total_payment %>
    <%= f.hidden_field :payment_method %>
    <%= f.hidden_field :shipping_cost %>
    <%= f.submit "注文を確定する", class: 'btn btn-success' %>

    <% end %>
  </div>
</div>

