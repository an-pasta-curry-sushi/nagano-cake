<div class="bg-image">
  <div class='container'>
  <div class="row">
    <div class="offset-md-1 my-2">
      <h4 class="text-center title">注文履歴詳細</h4>
    </div>
  </div>
  <div class="row mt-2">
    <div style="width: 100%" class="mx-5">
      <table class='table table-borderless text-light'>
        <tr>
          <td style="width: 15%">
            <h5 class="font-weight-bold">購入者</h5>
          </td>
          <td colspan="2">
            <h5><u><%= @order.customer.get_full_name(@order.customer) %></u></h5>
          </td>
        </tr>
        <tr>
          <td style="width: 20%" class="font-weight-bold">
            <h5 class="font-weight-bold">注文日</h5>
          </td>
          <td colspan="2">
            <h5><%= @order.created_at.strftime('%Y/%m/%d') %></h5>
          </td>
        </tr>
        <tr>
          <td style="width: 20%" class="font-weight-bold">
            <h5 class="font-weight-bold">配送先</h5>
          </td>
          <td style="width: 13%">
            <h5>〒 <%= @order.postal_code %></h5>
          </td>
          <td><h5><%= @order.address %></h5></td>
        </tr>
        <tr>
          <td><h5 class="font-weight-bold">宛名</h5></td>
          <td colspan="2" style="width 10%">
            <h5><%= @order.name %></h5>
          </td>
        </tr>
        <tr>
          <td style="width: 20%" class="font-weight-bold">
            <h5 class="font-weight-bold">支払い方法</h5>
          </td>
          <td colspan="2">
            <h5><%= @order.payment_method_i18n %></h5>
          </td>
        </tr>
        <tr>
          <td style="width: 20%" class="font-weight-bold">
            <h5 class="font-weight-bold">注文ステータス</h5>
          </td>
          <td id="order_status_area"colspan="2">
            <%= render 'admin/orders/order_status', order: @order %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class='row'>
    <div id="order_detail_status_area" class='col-md-8 mx-4'>
          <%= render 'admin/orders/order_detail_status', order: @order, order_details: @order_details %>
    </div>
    <div class='col-md-3 d-flex align-items-end'>
      <table class='table table-borderless text-light'>
        <tr>
          <td><h5 class="font-weight-bold">商品合計</h5></td>
          <td><h5 class="text-right"><%= @total.round.to_s(:delimited) %> 円</h5></td>
        </tr>
        <tr>
          <td><h5 class="font-weight-bold">送料</h5></td>
          <td><h5 class="text-right"><%= @order.shipping_cost %> 円</h5></td>
        </tr>
        <tr>
          <td><h5 class="font-weight-bold">請求金額合計</h5></td>
          <td><h5 class="text-right"><%= (@total.round + @order.shipping_cost).to_s(:delimited) %> 円</h5></td>
        </tr>
      </table>
    </div>
  </div>
</div>
</div>