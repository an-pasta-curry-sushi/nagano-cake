<div class="container">
  <div class="row">
    <h5>ジャンル一覧・追加</h5>
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
         <tr>
           <td><%= genre.name %></td>
           <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
         </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
