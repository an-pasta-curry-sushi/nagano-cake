<div class='container'>
  <div class="row">
    <div class="offset-md-1 my-2">
      <h4 class="title text-center px-4">注文履歴一覧</h4>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-12'>
      <table class='table'>
        <thead class='thead-light'>
          <tr>
            <th style="width: 10%">注文日</th>
            <th>配送先</th>
            <th style="width: 24%">注文商品</th>
            <th style="width: 10%">支払い金額</th>
            <th style="width: 13%">注文ステータス</th>
            <th style="width: 11%">注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
              <td width="250">
                <p>〒<%= order.postal_code %></p>
                <p><%= order.address %></p>
                <p><%= order.name %></p>
                </td>
              <td>
                <% order.order_details.each do |order_detail| %>
                  <p><%= order_detail.item.name %></p>
                <% end %>
              </td>
              <td><%= order.total_payment.to_s(:delimited) %>円</td>
              <td><%= order.status_i18n %></td>
              <td><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
