<!--ジャンル検索欄-->
<div class='text-center m-5'>
  <div class="card" style="width: 12rem;">
    <div class="card-header">
      ジャンル一覧
    </div>
    <ul class="list-group list-group-flush">
      <% @genres.each do |genre| %>
        <li class="list-group-item">
          <%=link_to genre.name, '/', class: 'text-decoration-non' %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class='container px-5 ms-5 mt-5'>

  <div class='row'>

    <!--商品画像-->
    <div class='col-md-5 text-center'>
      <%=image_tag @item.get_item_image, size: '250x250' %>
    </div>

    <!--商品を数量選択欄-->
    <div class='col-md-6 offset-md-1 text-left'>
      <h3 class='font-weight-bold'><%= @item.name %></h3>
      <p class='mt-3'><%= @item.introduction %></p>
      <div class=' mt-5'>
        <h3 class='d-inline-flex'>¥<%= @item.get_taxin_price %></h3>
        <span class=''>(税込)</span>
      </div>
      <div class='mt-5'>
        <%= form_with model: @cart_item do |f| %>

        <!--hidden_field-->
        <%= f.hidden_field :item_id, :value => @item.id %>


        <!--数量選択-->
        <div class="form-group d-inline-flex">
          <%= f.label :amount, '個数選択'%>
          <%= f.number_field :amount, min: 1, :value =>1, :size => "30*30" %>
        </div>
        <div class="form-group d-inline-flex">
          <%= f.submit 'カートに入れる',class: 'btn btn-success' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
