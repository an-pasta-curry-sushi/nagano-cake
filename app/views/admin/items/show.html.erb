<div class="bg-image">
  <div class='container'>
  <div class="row">
    <div class="col-md-2 offset-md-1 my-2">
      <h4 class="text-center title">商品詳細</h4>
    </div>
  </div>
  <div class="row mt-2">
    <div class='col-md-4'>
      <%= image_tag @item.get_item_image, size: '300' %>
    </div>
    <div class='col-md-7'>
      <div class='table table-borderless'>
        <table class="text-light">
          <tr><td style='width: 25%'>商品名</td><td><h5><%= @item.name %></h5></td></tr>
          <tr><td style='width: 25%'>商品説明</td><td><h5><%= @item.introduction %></h5></td></tr>
          <tr><td style='width: 25%'>ジャンル</td><td><h5><%= @item.genre.name %></h5></td></tr>
          <tr><td style='width: 25%'>税込価格<br>(税抜価格)</td><td class="align-middle"><h5><%= (@item.no_tax_price).round.to_s(:delimited) %> (<%= (@item.no_tax_price * 1.1).round.to_s(:delimited) %>) 円</h5></td></tr>
          <tr><td style='width: 25%'>販売ステータス</td>
            <td>
              <% if @item.salling_status == true %>
                <h5 class="text-success font-weight-bold">販売中</h5>
              <% else %>
                <h5 class="text-secondary font-weight-bold">販売停止中</h5>
              <% end %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <div class="row">
    <div class='col-md-4'></div>
    <div class="col-md-7 mx-auto">
      <p class="ml-lg-5"><%= link_to '編集する', edit_admin_item_path, class: 'btn btn-success w-25'%></p>
    </div>
  </div>
</div>
</div>
