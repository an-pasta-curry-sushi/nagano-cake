<div class='container'>
  <div class="row">
    <div class="offset-md-1 my-2">
      <h4 class="text-center title px-4">管理者ログイン</h4>
    </div>
  </div>
  <div class="row mt-2">
    <div class='col-md-6 mx-auto'>
      <%= form_with model: @admin,url: admin_session_path do |f| %>
        <table class="table table-borderless" >
          <tr>
            <td style= "width: 25%"><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email form-control", size: "40" %></td>
          </tr>
          <tr>
            <td style= "width: 25%"><%= f.label :password, "パスワード" %></td>
            <td><%= f.password_field :password, autocomplete: "current-password form-control", size: "40"  %></td>
          </tr>
          <tr>
            <td style= "width: 25%"></td>
            <td><%= f.submit "ログイン", class: "btn btn-primary w-25" %></td>
          </tr>
        </table>

      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
