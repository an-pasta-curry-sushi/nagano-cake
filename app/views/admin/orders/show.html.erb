<div class='container'>
  <h3>注文履歴詳細</h3>
  <div class='row'>
    <table class='table'>
      <tr><td>購入者</td><td><%= @order.customer.get_full_name(@order.customer) %></td></tr>
      <tr><td>注文日</td><td><%= @order.created_at %></td></tr>
      <tr><td>配送先</td><td><%= @order.address %></td></tr>
      <tr><td>支払い方法</td><td><%= @order.payment_method_i18n %></td></tr>
      <tr><td>注文ステータス</td>
        <td>
          <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
          <%= f.select :status, Order.statuses.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
          <%= f.submit "更新", class: 'btn btn-success btn-sm' %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
  <div class='row'>
    <div class='col'>
      <table class='table'>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.sum_of_price %></td>
            <td>
              <%= form_with model: order_detail, url: admin_order_order_detail_path(@order, order_detail), method: :patch do |f| %>
                <%= f.select :making_status, OrderDetail.making_statuses.keys.map {|k| [I18n.t("enums.order_detail.making_status.#{k}"), k]} %>
                <%= f.submit "更新", class: 'btn btn-success btn-sm' %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class='col'>
      <table class='table'>
        <tr><td>商品合計</td><td><%= @total.round.to_s %>円</td></tr>
        <tr><td>送料</td><td><%= @order.shipping_cost %>円</td></tr>
        <tr><td>請求金額合計</td><td><%= (@total.round + @order.shipping_cost).to_s %>円</td></tr>
      </table>
    </div>
  </div>
</div>
