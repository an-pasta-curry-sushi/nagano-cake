<h3>注文情報確認</h3>
<div class='container'>
  
  <div class='row'>
    
    <div class='col-md-7'>
      <table>
        
        <tr>
          <td>商品名</td>
          <td>単価(税込)</td>
          <td>数量</td>
          <td>小計</td>
        </tr>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%=cart_item.item.get_item_image, size: '50x50'%>
            <%=cart_item.item.name%>
          </td>
          <td><%=cart_item.item.get_taxin_price%></td>
          <td><%=cart_item.amount%></td>
          <td><%=cart_item.item.sum_of_price(cart_item)%></td>
        </tr>
        <%end%>
        
      </table>
    </div>
    
    
    <div class='col-md-4 offset-md-1'>
      <table>
        
        <tr>
          <td>送料</td>
          <td>800</td>
        </tr>
        
        <tr>
          <td>商品合計</td>
          <td><%=@total.to_s(:delimited) %></td>
        </tr>
        
        <tr>
          <td>請求金額</td>
          <td><%=@total_payment %></td>
        </tr>
        
      </table>
    </div>
    
    <div class='container'>
      <div class='row'>
        <div class='col-md-8 offset-md-4'></div>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-7 offset-md-5'>
      <table>
        
      </table>
    </div>
  </div>
</div>

