<table class='table table-inverse border-bottom'>
  <thead class='thead-light text-dark'>
    <tr>
      <th style="width: 10%">会員ID</th>
      <th style="width: 46%"><u>氏名</u></th>
      <th style="width: 34%">メールアドレス</th>
      <th style="width: 10%">ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to admin_customer_path(customer), class: "text-dark" do %>
            <u><%= customer.last_name %><%= customer.first_name %></u>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_active == true %>
            <span class="text-success font-weight-bold">有効</span>
          <% else %>
            <span class="text-muted font-weight-bold">無効</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="mx-auto">
  <%= paginate customers, remote: true %>
</div>
