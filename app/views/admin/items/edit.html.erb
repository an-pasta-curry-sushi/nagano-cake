<div class="bg-image">
  <div class='container'>
  <div class="row">
    <div class="col-md-2 offset-md-1 my-2">
      <h4 class="text-center title">商品編集</h4>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-md-6 mx-auto">
  	  <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
      <table class="table table-borderless text-light">
  	  <%= render 'layouts/errors', obj: @item %>
        <tr>
          <td style="width30%"><%= f.label :image, "商品画像" %></td>
          <td><%= f.file_field :item_image, class: "form-control-file item_image", accept: 'image/*' %></td>
        </tr>
        <tr>
          <td style="width: 30%"><%= f.label :name, "商品名" %></td>
          <td><%= f.text_field :name, class: 'item_name', size: "40" %></td>
        </tr>
        <tr>
          <td style="width: 30%"><%= f.label :introduction, "商品説明" %></td>
          <td><%= f.text_area :introduction, rows: '5', class: "w-100 comment-textarea" %></td>
        </tr>
        <tr>
          <td style="width: 30%"><%= f.label :genre_id, "ジャンル" %></td>
          <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td>
        </tr>
        <tr>
          <td style="width: 30%"><%= f.label :no_tax_price, "税抜価格" %></td>
          <td>
            <%= f.text_field :no_tax_price, class: 'item_no_tax_price', size: "20" %> 円
          </td>
        </tr>
        <tr>
          <td style="width: 30%"><%= f.label :no_tax_price, "販売ステータス" %></td>
          <td>
            <%= f.radio_button :salling_status, "false" %>
            <%= f.label :salling_status, "販売停止中" %>
            <%= f.radio_button :salling_status, "true" %>
            <%= f.label :salling_status, "販売中" %>
          </td>
        </tr>
        <tr>
          <td style="width: 30%"></td>
          <td><%= f.submit "変更を保存", class: 'btn btn-success w-50' %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
</div>