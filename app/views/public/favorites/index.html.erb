<div class="favorite-page">
  <%if @favorites.exists? %>
  <div class="back-img">
    <div class='container'>
      <div class='row'>
        <div class='offset-md-1 my-2 favorite-title'>
          <h4 class='text-center px-4 text-light'>欲しいものリスト</h4>
        </div>
        <div class='col-md-2 offset-md-6 mt-2'>
          <%= link_to '買い物を続ける',root_path, class: "btn btn-primary " %>
        </div>
      </div>
      <div class='row mt-3'>
        <div class='col-md-12 mx-auto'>
          <div id="favorite_index_area" class="contents">
             <%= render 'public/favorites/index', favorites: @favorites, cart_item: @cart_item %>
          </div>
        </div>
      </div>
    </div>
    <div class='kminari mt-5'>
      <%= paginate @favorites %>
    </div>
  </div>
  
  <%elsif%>
  <div class="back-img">
    <div class='container mb-5'>
  
      <div class='row'>
        <div class='col-md-8 offset-md-2 favorite-none text-light'>
          <h1>欲しいものリストに商品がありません</h1>
        </div>
        <div class='col-md-2 offset-md-5 mt-4'>
          <%= link_to '買い物を続ける',root_path, class: "btn btn-primary " %>
        </div>
      </div>
    </div>
  </div>
  <%end%>
 
</div>

