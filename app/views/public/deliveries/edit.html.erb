<dvi class="container m">
  <h2>配送先登録 / 一覧</h2>
  <%= render 'layouts/errors', obj: @delivery %>
  <div class="row m-2 ">
    <%= form_with model: @delivery, url: delivery_path, method: :patch do |f| %>
    <div class="form_group" %>
     <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
     <%= f.text_field :postal_code, class: "form-control postal_code" %>
    </div>
    <div class="form_group" %>
      <%= f.label :address, "住所" %>
      <%= f.text_field :address, :size => "54", class: "form-control address" %>
    </div>
    <div class="form_group" %>
      <%= f.label :name, "宛名" %>
      <%= f.text_field :name, class: "form-control name" %>
      <%= f.hidden_field :customer_id, :value => current_customer.id %>
      <%= f.submit "変更内容を保存", class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>