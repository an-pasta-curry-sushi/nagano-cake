<div class='container'>
  <div class="row">
    <div class="col-md-3 offset-md-1 my-2">
      <h5 class="text-center" style='background-color: #e6e6e6;'>　注文履歴一覧　</h5>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-10 mx-auto'>
      <table class='table table-hover table-inverse'>
        <thead class='thead-light text-dark'>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="text-dark">
                <%= link_to admin_order_path(order) do %>
                  <u><%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %></u>
                <% end %>
              </td>
              <td>
                <%= order.customer.last_name %><%= order.customer.first_name %>
              </td>
              <td><%= order.order_details.sum(:amount) %></td>
              <td>
                <%= order.status %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
