<div class='container'>
  <div class="row">
    <div class="offset-md-1 my-2">
      <h4 class="text-center title">注文履歴詳細</h4>
    </div>
  </div>
  <div class="row mt-2">
    <div style="width: 100%" class="mx-5">
      <table class='table table-borderless'>
        <tr>
          <td style="width: 15%">
            <h5 class="font-weight-bold">購入者</h5>
          </td>
          <td colspan="2">
            <h5><u><%= @order.customer.get_full_name(@order.customer) %></u></h5>
          </td>
        </tr>
        <tr>
          <td style="width: 20%" class="font-weight-bold">
            <h5 class="font-weight-bold">注文日</h5>
          </td>
          <td colspan="2">
            <h5><%= @order.created_at.strftime('%Y/%m/%d') %></h5>
          </td>
        </tr>
        <tr>
          <td style="width: 20%" class="font-weight-bold">
            <h5 class="font-weight-bold">配送先</h5>
          </td>
          <td style="width: 13%">
            <h5>〒 <%= @order.postal_code %></h5>
          </td>
          <td><h5><%= @order.address %></h5></td>
        </tr>
        <tr>
          <td></td>
          <td colspan="2" style="width 10%">
            <h5><%= @order.name %></h5>
          </td>
        </tr>
        <tr>
          <td style="width: 20%" class="font-weight-bold">
            <h5 class="font-weight-bold">支払い方法</h5>
          </td>
          <td colspan="2">
            <h5><%= @order.payment_method_i18n %></h5>
          </td>
        </tr>
        <tr>
          <td style="width: 20%" class="font-weight-bold">
            <h5 class="font-weight-bold">注文ステータス</h5>
          </td>
          <td colspan="2">
            <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
            <%= f.select :status, Order.statuses.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
            <%= f.submit "更新", class: 'btn btn-success btn-sm ml-2' %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-8 mx-4'>
      <table class='table table-borderless border-bottom'>
        <thead class='thead-light'>
          <tr>
            <th style="width: 40%" class="font-weight-bold">商品名</th>
            <th style="width: 15%" class="font-weight-bold">単価(税込)</th>
            <th style="width: 10%" class="font-weight-bold">数量</th>
            <th style="width: 10%" class="font-weight-bold">小計</th>
            <th style="width: 25%" class="font-weight-bold">製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= (order_detail.price).to_s(:delimited) %></td>
            <td><%= order_detail.amount %></td>
            <td><%= (order_detail.sum_of_price).to_s(:delimited) %></td>
            <td>
              <%= form_with model: order_detail, url: admin_order_order_detail_path(@order, order_detail), method: :patch do |f| %>
                <%= f.select :making_status, OrderDetail.making_statuses.keys.map {|k| [I18n.t("enums.order_detail.making_status.#{k}"), k]} %>
                <%= f.submit "更新", class: 'btn btn-success btn-sm ml-2' %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class='col-md-3 d-flex align-items-end'>
      <table class='table table-borderless'>
        <tr>
          <td><h5 class="font-weight-bold">商品合計</h5></td>
          <td><h5 class="text-right"><%= @total.round.to_s(:delimited) %> 円</h5></td>
        </tr>
        <tr>
          <td><h5 class="font-weight-bold">送料</h5></td>
          <td><h5 class="text-right"><%= @order.shipping_cost %> 円</h5></td>
        </tr>
        <tr>
          <td><h5 class="font-weight-bold">請求金額合計</h5></td>
          <td><h5 class="text-right"><%= (@total.round + @order.shipping_cost).to_s(:delimited) %> 円</h5></td>
        </tr>
      </table>
    </div>
  </div>
</div>
