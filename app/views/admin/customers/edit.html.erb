<div class='container'>

  <h4 class='p-5 ml-3'>会員情報編集</h4>
  <%= render 'layouts/errors', obj: @customer %>
  <div class='row mx-auto'>
    <div class='col-lg-3'>
      <p class='mt-2'>名前</p>
      <p class='mt-2'>フリガナ</p>
      <p class='mt-2'>郵便番号(ハイフン無し)</p>
      <p class='mt-2'>住所</p>
      <p class='mt-2'>電話番号(ハイフン無し)</p>
      <p class='mt-2'>メールアドレス</p>
      <p class='mt-2'>会員ステータス</p>
    </div>
    <div class='col-lg-7'>
      <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
        <div class='mt-2'>
          <span class='mr-3'>(姓)</span>
          <%= f.text_field :last_name, autofocus: true, class: 'last_name' %>
          <span class='mr-3 ml-2'>(名)</span>
          <%= f.text_field :first_name, autocomplete: "off", class: 'first_name' %>
        </div>
        <div class='field mt-2'>
          <span>(セイ)</span>
          <%= f.text_field :last_name_easy, autocomplete: 'off', class: 'last_name_easy' %>
          <span class='ml-2'>(メイ)</span>
          <%= f.text_field :first_name_easy, autocomplete: 'off', class: 'first_name_easy' %>
        </div>
        <div class='field mt-2'>
          <%= f.text_field :postal_code, autocomplete: 'off', class: 'ml-5 email' %>
        </div>
        <div class='field mt-2'>
          <%= f.text_field :address, autocomplete: 'off', :size =>"54", class: 'ml-5 postal_code' %>
        </div>
        <div class='field mt-2'>
          <%= f.text_field :phone_number, autocomplete: 'off', class: 'ml-5 address' %>
        </div>
        <div class='field mt-2' >
          <%= f.email_field :email, autocomplete: 'off', class: 'ml-5 phone_number' %>
        </div>
        <div class='field mt-3 ml-5' >
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "有効"%>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, "退会"%>
        </div>
        <div class="actions mt-3 d-grid gap-2">
          <%= f.submit "変更を保存する", class: "col-5 ml-5 btn btn-success"%>
      　　　<% end %>
        </div>
    </div>
  </div>
</div>